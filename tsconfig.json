{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "module": "commonjs",
      "target": "es2016",
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "suppressImplicitAnyIndexErrors":true,
      "ignoreDeprecations": "5.0",
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
      ]
    },
    "files": [
      "index.ts"
    ],
    "include": [
      "app",
      "server"
    ],
    "exclude": [
      "css",
      "images",
      "migration",
      "node_modules",
      "Routes",
      "scripts",
      "views",
      "public"
    ]
  }
  

  